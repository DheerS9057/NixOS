
* {
  padding: 0;
  margin: 0;
  min-height: 0;
  border-radius: 0px;
  border: none;
  text-shadow: none;
  transition: none;
  box-shadow: none;
}

window#waybar {
  background: #282828;
}

window#waybar.hidden {
  opacity: 0.5;
}

#workspaces button,
#workspaces button:hover,
#workspaces button.visible,
#workspaces button.visible:hover,
#workspaces button.active,
#workspaces button.active:hover,
#workspaces button.urgent,
#workspaces button.special,
#workspaces button.special.active,
#window,
#tray,
#backlight,
#pulseaudio,
#pulseaudio.muted,
#battery,
#battery.critical,
#battery.warning,
#clock,
#power-profiles-daemon,
#network
#bluetooth
#submap {
  font-family: JetBrainsMono Nerd ;
  font-size: 15px;
  font-weight: 800;
  color: #282828;
  /* background: #282828; */
  /* border: 4px solid #282828; */
  /* border-radius: 0px; */
}

#window,
#tray,
#backlight,
#pulseaudio,
#pulseaudio.muted,
#battery,
#battery.critical,
#battery.warning,
#memory {
  margin-right : 5px;
  margin-left  : 5px;

}
/* ================================= */

tooltip {
  background-color: #282828;
  color: #EBDBB2;
  padding: 5px 10px;
  border: 1px solid #504945;
  border-radius: 2px;
  box-shadow: 0 0 5px rgba(0,0,0,0.5);
}

/* ================================= */

#workspaces button {
  color: #ebdbb2;
  border-radius: 0.7px;
  margin-bottom: 3px;
  margin-top: 3px;
  margin-right: 4px;
  margin-left: 4px;
  min-width: 30px;
}

#workspaces button:hover {
  background: #83a598;
}

#workspaces button.visible {
  background: #83a598;
}

#workspaces button.visible:hover {
  background: #83a598;
}

#workspaces button.active {
  background: #83a598;
}

#workspaces button.active:hover {
  background: #83a598;
}

#workspaces button.urgent {
  background: #ea6962;
}

/* ================================= */

#workspaces button.special {
  background-color: #D65D0E;
}

#workspaces button.special:hover {
  background-color: #83A598;
}

#workspaces button.special.active {
  background-color: #FE8019;
}

#workspaces button.special.active:hover {
  background-color: #83A598;
}

/* ================================= */

#window {
  color: #282828;
  background: #83a598;
  border-radius: 0.7px;
  margin-top: 4px;
  margin-bottom: 4px;
  margin-left: 5px;
  margin-right: 3px;

  padding-left: 5px;
  padding-right: 5px;
  /* min-width: 20px; */
}

window#waybar.empty #window {
  margin: 0;
  padding: 0;
  background: transparent;
  color: transparent;
}

/* ================================= */
#backlight {
  color: #d8a657;
}
/* ================================= */

#pulseaudio {
  color: #83A598;
}

#pulseaudio.muted {
  color: #ea6962;
}

/* ================================= */

#battery {
  color: #B8BB26;
}

#battery.critical {
  color: #CC241D;
}

#battery.warning {
  color: #FE8019;
}

#battery.full {
  color: #B8BB26;
}

#battery.charging {
  color: #98971A;
}

#battery.plugged {
  color: #98971A;
}

#battery.charging.warning {
  color: #d79921;
}

#battery.charging.critical {
  color: #CC241D;
}

/* ================================= */

#clock {
  color: #8ec07c;
}

/* ================================= */

#power-profiles-daemon {
  padding-left: 2px;
  padding-right: 2px;
  color: #d3869b;
}


/* ================================= */

#submap {
  background: #D79921;
  margin-top: 4px;
  margin-bottom: 4px;
  margin-left: 3px;
  margin-right: 3px;

  padding-left: 4px;
  padding-right: 4px;
}

/* ================================= */
 #network{
  color: #8ec07c;
  margin-top: 4px;
  margin-bottom: 4px;
  margin-left: 4px;
  margin-right: 10px;
  font-size: 15px;
  padding-left: 4px;
  padding-right: 4px;
 }

#bluetooth{
  color: #98971a;
  font-size: 17px;
  /*font-family: Bold ;*/
  margin-left: 0px;
  margin-right: 10px;
  padding-left: 4px;
  padding-right: 4px;
}
